<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightGray"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivBackdropImage"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/ivMargin"
        android:layout_marginTop="@dimen/ivMargin"
        android:layout_marginBottom="@dimen/ivMargin"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/flicks_backdrop_placeholder" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivBackdropImage"
        android:text="Movie Title"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_margin="@dimen/textMargin"
        android:layout_toRightOf="@+id/ivBackdropImage" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvTitle"
        android:layout_below="@+id/tvTitle"
        android:layout_marginRight="@dimen/textMargin"
        android:textColor="@color/textColor"
        android:ellipsize="end"
        android:maxLines="10"
        android:text="TextView"
        android:layout_alignLeft="@+id/tvTitle" />
</RelativeLayout>